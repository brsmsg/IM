<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_username"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/txt_sendUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jyxhhhhhh"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_date_time"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/txt_requestDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-03-23T13:03:46"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="20dp">

        <com.xuexiang.xui.widget.button.ButtonView
            style="@style/ButtonView.Blue"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/accept_friend"
            android:text="@string/accept_friend"
            />


        <com.xuexiang.xui.widget.button.ButtonView
            style="@style/ButtonView.Blue"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/refuse_friend"
            android:text="@string/refuse_friend"
            android:layout_marginStart="10dp"

            />


    </LinearLayout>

</FrameLayout>