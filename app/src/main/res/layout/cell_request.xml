<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"

        >

        <TextView
            android:id="@+id/txt_sendUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jyxhhhhhh"
            android:textSize="20sp"
             />
        <TextView
            android:id="@+id/txt_requestDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-03-23T13:03:46"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="20dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/accept_friend"
            android:background="@drawable/ic_check_filled"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/refuse_friend"
            android:background="@drawable/ic_close_filled"
            android:layout_marginStart="10dp"

            />


    </LinearLayout>

</FrameLayout>